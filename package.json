{
  "name": "bakeologic-api",
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "build": "bun install && bun db:migrate:deploy && bun db:gen:prod",
    "start": "bun run src/index.ts",
    "docker:up": "docker compose up -d",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:gen": "prisma generate --no-hints",
    "db:gen:prod": "prisma generate --no-hints --generator client --generator zod",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset",
    "db:seed": "prisma db seed"
  },
  "prisma": {
    "seed": "bun prisma/seed.ts"
  },
  "dependencies": {
    "@hono/zod-openapi": "^0.19.6",
    "@prisma/client": "^6.7.0",
    "@scalar/hono-api-reference": "^0.5.184",
    "argon2": "^0.41.1",
    "hono": "^4.7.8",
    "slugify": "^1.6.6",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "prisma": "^6.7.0",
    "prisma-dbml-generator": "^0.12.0",
    "prisma-erd-generator": "^2.0.4",
    "prisma-zod-generator": "^0.8.13",
    "typescript": "^5.8.3",
    "zod-prisma-types": "^3.2.4"
  }
}
